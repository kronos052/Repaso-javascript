/*sort-array-by-parity*/

let numbers = [3, 1, 2, 4];

/*Función, qué si el número es par lo coloca en un array vacío al principio 
y si nó lo es lo coloca al final*/
function parity(nums) {
  let newNumbers = [];
  for (let num of nums) {
    if (num % 2 === 0) {
      newNumbers.unshift(num);
    } else {
      newNumbers.push(num);
    }
  }
  return newNumbers;
}
console.log(parity(numbers));
