/*best-time-to-buy-and-sell-stock*/

let numbers = [7, 1, 5, 3, 6, 4];

function best(nums) {
  let resultado = 0;
  /*creo 2 bucles para restar los n√∫meros en distintas posiciones*/
  for (let i = 0; i < nums.length; i++) {
    for (let j = i + 1; j < nums.length; j++) {
      /*guardo la resta en una variable temporal*/
      let temp = nums[j] - nums[i];
      /*cada vez que la variable temporal es mayor la guardo en la varibale resultado*/
      if (temp > resultado) {
        resultado = temp;
      }
    }
  }
  return resultado;
}
console.log(best(numbers));

/*EJERCICIO ROBOT*/

 let moves = "UDLL";

function robot(moves) {
  let up = 0;
  let down = 0;
  let right = 0;
  let left = 0;
  const splitMoves = moves.split("");
  for (let move of splitMoves) {
    switch (move) {
      case "U":
        up++;
        break;
      case "D":
        down++;
        break;
      case "L":
        left++;
        break;
      default:
        right++;
    }
  }
  const ejeX = right - left;
  const ejeY = up - down;

  if (ejeX === 0 && ejeY === 0) {
    return true;
  }
  return false;
}
console.log(robot(moves));



